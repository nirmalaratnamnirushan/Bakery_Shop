<%- include('layout/header')%>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-dark">
                        <h3 class="text-light">Edit Item (
                            <%= items.name %>)</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update/<%= items._id %>" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Fruit Name" value="<%= items.name %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="name">Price</label>
                                <input type="text" name="price" class="form-control form-control-lg" placeholder="Enter Fruit Price" value="<%= items.price %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="name">Quantity</label>
                                <input type="number" name="quantity" class="form-control form-control-lg" placeholder="Enter Fruit Quantity" value="<%= items.quantity %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input class="form-control form-control-lg" type="file" name="image" />
                                <img src="/<%= items.image %>" width="100" class="img-thumbnail mt-1">
                            </div>
                            <input type="hidden" name="old_image" value="<%= items.image %>">
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Updata Item" class="btn btn-dark btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer')%>