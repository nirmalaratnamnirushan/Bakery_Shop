<%- include('layout/header') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <!-- Message Alert -->
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong><%= message.message %></strong>
                    </div>
                    <% } %>

                        <!-- Items Table -->
                        <div class="table-responsive">
                            <% if (items && items.length > 0) { %>
                                <table class="table table-striped text-center my-3">
                                    <thead>
                                        <tr class="table-dark">
                                            <th class="text-center">ID</th>
                                            <th class="text-center">Image</th>
                                            <th class="text-center">Name</th>
                                            <th class="text-center">Price</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% items.forEach((row, index) => { %>
                                            <tr class="align-middle text-center">
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <!-- Ensure the image path is correct -->
                                                    <img src="<%= row.image ? '/uploads/' + row.image : '/images/default.jpg' %>" width="100" class="img-thumbnail" alt="Item Image" />
                                                </td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td>
                                                    <%= row.price %>
                                                </td>
                                                <td>
                                                    <%= row.quantity %>
                                                </td>
                                                <td>
                                                    <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <!-- No Items Found -->
                                    <h1 class="text-center text-secondary mt-5">No items found in the database!</h1>
                                    <% } %>
                        </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>